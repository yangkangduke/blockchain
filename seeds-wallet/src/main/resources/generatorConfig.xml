<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="simple" targetRuntime="MyBatis3Simple">

        <!-- include the plugin -->
        <plugin type="com.softwareloop.mybatis.generator.plugins.LombokPlugin">

            <!-- enable annotations -->
            <property name="builder" value="true"/>
            <!-- annotation's option(boolean) -->
            <property name="builder.fluent" value="false"/>
            <!-- annotation's option(String) -->
            <property name="builder.builderMethodName" value="myBuilder"/>

            <property name="accessors" value="true"/>
            <!-- annotation's option(array of String) -->
            <property name="accessors.prefix" value="m_, _"/>

            <!-- disable annotations -->
            <property name="allArgsConstructor" value="true"/>
        </plugin>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://192.168.0.117:3306/kine"
                        userId="root"
                        password="root123"/>

        <javaModelGenerator targetPackage="com.kine.wallet.model" targetProject="src/main/java"/>

        <sqlMapGenerator targetPackage="com.kine.wallet.mapper" targetProject="src/main/resources"/>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.kine.wallet.mapper"
                             targetProject="src/main/java"/>


        <table tableName="t_hot_wallet">
            <domainObjectRenamingRule searchString="^T" replaceString=""/>
            <columnRenamingRule searchString="^f_" replaceString=""/>
        </table>

    </context>
</generatorConfiguration>