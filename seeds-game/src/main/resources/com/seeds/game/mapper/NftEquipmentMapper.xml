<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.seeds.game.mapper.NftEquipmentMapper">

    <resultMap id="BaseResultMap" type="com.seeds.game.entity.NftEquipment">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="token_id" jdbcType="BIGINT" property="tokenId"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="mint_address" jdbcType="VARCHAR" property="mintAddress"/>
        <result column="owner" jdbcType="VARCHAR" property="owner"/>
        <result column="nft_generated" jdbcType="TINYINT" property="nftGenerated"/>
        <result column="mint_time" jdbcType="BIGINT" property="mintTime"/>
        <result column="mint_trx" jdbcType="VARCHAR" property="mintTrx"/>
        <result column="update_time" jdbcType="BIGINT" property="updateTime"/>
        <result column="on_sale" jdbcType="TINYINT" property="onSale"/>
        <result column="order_id" jdbcType="VARCHAR" property="orderId"/>
        <result column="is_delete" jdbcType="TINYINT" property="isDelete"/>
        <result column="delete_time" jdbcType="BIGINT" property="deleteTime"/>
        <result column="is_deposit" jdbcType="TINYINT" property="isDeposit"/>
        <result column="cancel_time" jdbcType="BIGINT" property="cancelTime"/>
        <result column="auction_id" jdbcType="BIGINT" property="auctionId"/>
    </resultMap>

    <sql id="mainColumns">
        id, token_id, name, mint_address, owner, nft_generated, mint_time, mint_trx, update_time, on_sale, order_id, is_delete, delete_time, is_deposit, cancel_time, auction_id
    </sql>

    <select id="getById" resultMap="BaseResultMap">
        select
        <include refid="mainColumns"/>
        from z_equipment_nft
        where 1 = 1
        <if test="id != null and id != ''">
            and id = #{id}
        </if>
    </select>

</mapper>
